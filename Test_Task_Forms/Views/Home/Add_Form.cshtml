@{
}
@model Test_Task_Forms.Models.Form

<fieldset>
    <form asp-action="Add_Form" asp-controller="Home" method="post" enctype="multipart/form-data">
        <div class=containers>
            <legend style="text-align:center;">Новая форма</legend>
            <div class="Inform">
                <p>
                    <label>Город отправителя</label>
                    <input name="CityFrom" class="form-control" pattern="^[А-Яа-яЁё\s]+$" required/>
                </p>
                <p>
                    <label>Адрес отправителя</label>
                    <input name="AddressFrom" class="form-control" pattern="^[А-Яа-яЁё\s]+$" required />
                </p>
                <p>
                    <label>Город получателя</label>
                    <input name="CityTo" class="form-control" pattern="^[А-Яа-яЁё\s]+$" required />
                </p>
                <p>
                    <label>Адресс получателя</label>
                    <input name="AddressTo" class="form-control" pattern="^[А-Яа-яЁё\s]+$" required />
                </p>
                <p>
                    <label>Вес груза(кг)</label>
                    <input name="Weight" class="form-control" pattern="^[0-9.]+$" required />
                </p>
                <p>
                    <label>Дата забора груза</label>
                    <input name="DateOfGet" class="form-control" placeholder="ДД.ММ.ГГГГ" pattern="[0-9]{2}.[0-9]{2}.[0-9]{4}" required />
                </p>
            </div>
        </div>
        <div class=containers>
            <div class="Inform">
                <p>
                    <input type="submit" value="Создать новую форму" class="btn btn1" />
                </p>
            </div>
            <div class="Inform">
                <a class="btn btn1" href="/Home/Index">Назад</a>
            </div>
        </div>
    </form>
</fieldset>